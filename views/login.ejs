<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="styles/footer.css" />
    <link rel="stylesheet" type="text/css" href="styles/navbar.css" />
    <title>Sign In</title>
    <style>
        main{
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 60px 10px;
        }
        .center{
          width: 500px;
          height: 500px;

        }
        h3{
            text-align: center;
            font-weight: 700;
            font-size: 40px;
            line-height: 48px;
            color: #746661;
            font-family: Neutra Text TF;

        }
        .text-field{
            width: 100%;
            padding-bottom: 12px;
            border: none;
            border-bottom: 2px solid #a5a4a4;
            margin: 25px 0;
            font-size: 14px;
            background: none;
            outline: none;
            
        }
        #btn {
            width: 100%;
            height: 50px;
            margin-top: 16px;
            background-color: black;
            color: white;
            font-weight: bold;
            cursor: pointer;
            border: none;
        }
        #btn:hover{
            background-color:burlywood;
        }
        a{
            font-size: 1.35rem;
            color: black;
            line-height: 24px;
        }
        p{
            text-align: center;
            font-weight: 700;
        }
    </style>
</head>
<body>
    <header></header>
    <main>
        <div class="center">
            <h3>Login</h3>
            <form action="/login" method="post">
            <input type="email" placeholder="Email" id="mailAdd" name="email"class="text-field"><br>
            <input type="password" placeholder="Password" id="mailPass" name="password" class="text-field"><br>
            <input type="submit" id="btn" value="submits"></form>
            <p><a href="/register">Register</a></p>
            <p>Forgot your password?</p>
        </div>
    </main>
    <footer></footer>
</body>
</html>
<script type="module">
    //integrating navbar and footer========
import nav from "/components/navbar.js";
  let hearder = document.querySelector("header");
  hearder.innerHTML = nav();
  let cart = document.getElementById("cart");

  cart.addEventListener("click", openNav);
  function openNav() {
    document.getElementById("mySidenav").style.width = "450px";
  }

  let close = document.getElementById("close");
  close.addEventListener("click", closeNav);

  function closeNav() {
    document.getElementById("mySidenav").style.width = "0";
  }

  let search = document.getElementById("search");

  search.addEventListener("click", openSearch);

  function openSearch() {
    document.getElementById("mySearchnav").style.height = "179px";
  }

  let remove = document.getElementById("remove");
  remove.addEventListener("click", closeSearch);

  function closeSearch() {
    document.getElementById("mySearchnav").style.height = "0";
  }
  import footerPart from "/components/footer.js";
  let footer = document.querySelector("footer");
  footer.innerHTML = footerPart();

</script>
<script>
    let regUsers=JSON.parse(localStorage.getItem("wowUserData"));
    function  SignIn(){
        let email=document.getElementById("mailAdd").value;
        let pass=document.getElementById("mailPass").value;
        for(let i=0;i<regUsers.length;i++){
            if(regUsers[i].emailAddress==email && regUsers[i].passWord==pass){
                window.location.href="/";
            }

        }
    }
</script>